extends ../layout-menubar

block content
  .row.justify-content-md-center
    .col.col-lg-5
      .row
        .col
          h1.mt-5.text-center= title
      .row 
        .col 
          p Choose a password to activate your account
      .row.justify-content-center
        .col
          form(method="post")
            .mb-3
              label.form-label(for="email") Email:
              input#email.form-control(type="email", name="email",disabled, value=email)
            .mb-3
              label.form-label(for="password") Password:
              input#email.form-control(type="password", name="password")
            .mb-3
              button.btn.btn-primary= title